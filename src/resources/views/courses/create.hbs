<div class="mt-4">
    <h3>ĐĂNG KHÓA HỌC</h3>
    <form method="post" action="/courses/store">
        <div class="mb-3">
            <label for="name" class="form-label">Tên Khóa Học</label>
            <input type="text" class="form-control" id="name" name="name">
            <div id="emailHelp" class="form-text">Tên khóa học không được bỏ trống</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea name="description" id="description" cols="100" rows="5"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Đường dẫn hình ảnh khóa học</label>
            <input type="text" class="form-control" id="image" name="image">
        </div>
        <div class="mb-3">
            <label for="videoid" class="form-label">Id Video</label>
            <input type="text" class="form-control" id="videoid" name="videoid">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Câp độ</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>